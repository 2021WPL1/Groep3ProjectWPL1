<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="MediumBlue" />
        <Setter Property="Opacity" Value="50" />
        
    </Style>

    <!--<Style TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="Red" />
        <Setter Property="Opacity" Value="50" />
    </Style>-->


    <!--LISTBOX & LISTBOXITEMS-->
    <Style TargetType="ListBox">
        <Setter Property="Height" Value="150"/>
    </Style>

    <!--Template voor de verschillende listboxitems
    
    <Style x:Key="RedListItem" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Red"/>
    </Style>-->

    <!--CHANGE STYLES 2 WITH STATIC RESOURCE-->
    <Style x:Key="GrayListItem" TargetType="ListBoxItem" >
        <Setter Property="BorderBrush" Value="gray"/>
    </Style>


