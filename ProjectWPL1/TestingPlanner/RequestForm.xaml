<Window x:Class="TestingPlanner.RequestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingPlanner"
        mc:Ignorable="d"
        Title="RequestForm" Height="600" Width="828">
    <StackPanel Margin="10">
        <GroupBox Header="Project Details">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Requester initials:" Height="25"/>
                    <Label Content="Division:" Height="25"/>
                    <Label Content="Job nature:" Height="25"/>
                    <Label Content="Project number (SAP/=hydra):" Height="25"/>
                    <Label Content="Eut projectname (nickname):" Height="25"/>
                    <Label Content="Partnumber:" Height="26"/>
                </StackPanel>
                <StackPanel Margin="10, 0">
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <ComboBox HorizontalAlignment="Left" Height="25" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                </StackPanel>
                <StackPanel>
                    <Label Content="net weight (kg):" Height="26"/>
                    <Label Content="Gross weight (kg):" Height="26"/>
                    <Label Content="Batteries inside:" Height="25"/>
                    <Label Content="Expected end date:" Height="25"/>
                    <Label Content="Link to testplan (optional):" Height="25"/>
                    <Label Content="JR Number:"/>
                </StackPanel>
                <StackPanel Margin="10, 0">
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <ComboBox HorizontalAlignment="Left" Height="25" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Parts and tests">
            <StackPanel>
                <Button Content="Add Part" Margin="10"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="EUT 1"/>
                    <Label Content="Partnumber"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                    <Label Content="net weight (kg)"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="50"/>
                    <Label Content="gross  weight (kg)"/>
                    <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="50"/>
                    <ComboBox Width="120" Margin="100, 0, 0, 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="EMC"/>
                    <CheckBox Content="ENVIRONMENTAL"/>
                    <CheckBox Content="RELIABILITY"/>
                    <CheckBox Content="PRODUCT SAFETY"/>
                    <CheckBox Content="PACKAGING"/>
                    <CheckBox Content="GREEN COMPLIANCE"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Planning details">
            <StackPanel>
                <Label Content="EUT for seen avaiblity date:" Height="25"/>
                <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Content="Special remarks (optional):" Height="25"/>
                <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Content="PVG Responsibility:"/>
                <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Content="Request date:"/>
                <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
            </StackPanel>
        </GroupBox>
        <Button Content="Confirm" Width="98" Height="40"/>
    </StackPanel>
</Window>
