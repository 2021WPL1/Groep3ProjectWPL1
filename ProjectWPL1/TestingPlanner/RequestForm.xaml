<Window x:Class="TestingPlanner.RequestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingPlanner"
        mc:Ignorable="d"
        Title="RequestForm" Height="600" Width="800">
    <StackPanel Margin="10">
        <GroupBox Header="Project Details">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Requester initials:" Height="25" Grid.ColumnSpan="2" Margin="0,0,153,0"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Grid.Row="1" Content="Division:" Height="25" Grid.ColumnSpan="2" Margin="0,0,153,0"/>
                <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Grid.Row="2" Content="Job nature:" Height="25" Grid.ColumnSpan="2" Margin="0,0,153,0"/>
                <Label Grid.Row="3" Content="Expected end date:" Height="25"/>
                <TextBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Grid.Row="5" Content="Link to testplan (optional):" Height="25"/>
                <TextBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <ComboBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="25" Width="120"/>
                <Label Grid.Column="3" Content="Projectnr. (SAP/Hydra):" Height="25" />
                <TextBox Grid.Column="4" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <Label Grid.Column="3" Grid.Row="1" Content="Eut projectname (nickname):" Height="25" VerticalAlignment="Top"/>
                <TextBox Grid.Column="4" Grid.Row="1" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                <CheckBox Grid.Column="5" Grid.Row="2" Content="Batteries inside" VerticalAlignment="Center"/>
                <Label Grid.Column="3" Grid.Row="4" Content="Request date:"/>
                <TextBox Grid.Column="4" Grid.Row="4" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="LightBlue" Width="120"/>
                <Label Grid.Column="3" Grid.Row="5" Content="JR Number:"/>
                <TextBox Grid.Column="4" Grid.Row="5" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="LightBlue" Width="120"/>
                <CheckBox Grid.Column="4" Grid.Row="6" Content="Internal" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Label Grid.Row="7" Content="Special remarks (optional):"/>
                <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" Height="50" HorizontalAlignment="Stretch" Background="Orange" Margin="0, 10"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Parts and tests">
            <StackPanel>
                <ListBox Height="150">
                    <ListBoxItem BorderBrush="Gray">
                        <Grid Width="750">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="EUT 1"/>
                            <Label Grid.Column="1" Content="Partnumber"/>
                            <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="120"/>
                            <Label Grid.Column="3" Content="net weight (kg)"/>
                            <TextBox Grid.Column="4" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="50"/>
                            <Label Grid.Column="5" Content="gross weight (kg)"/>
                            <TextBox Grid.Column="6" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Background="Orange" Width="50"/>
                            <ComboBox Grid.Column="7"/>
                            <CheckBox Grid.Column="1" Grid.Row="1" Content="EMC" FontSize="9" VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="1" Content="ENVIRONMENTAL" FontSize="9" VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="3" Grid.Row="1" Content="RELIABILITY" FontSize="9" VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="4" Grid.Row="1" Content="PRODUCT &#x0a;SAFETY" FontSize="9" VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="5" Grid.Row="1" Content="PACKAGING" FontSize="9" VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="6" Grid.Row="1" Content="GREEN &#x0a;COMPLIANCE" FontSize="9" VerticalContentAlignment="Center"/>
                            <ComboBox Grid.Column="1" Grid.Row="3" Visibility="Collapsed"/>
                            <ComboBox Grid.Column="2" Grid.Row="3" Visibility="Collapsed"/>
                            <ComboBox Grid.Column="3" Grid.Row="3" Visibility="Collapsed"/>
                            <ComboBox Grid.Column="4" Grid.Row="3" Visibility="Collapsed"/>
                            <ComboBox Grid.Column="5" Grid.Row="3" Visibility="Collapsed"/>
                            <ComboBox Grid.Column="6" Grid.Row="3" Visibility="Collapsed"/>
                        </Grid>
                    </ListBoxItem>
                </ListBox>
                <StackPanel Orientation="Horizontal" >
                    <Button Content="Add Part" Margin="10"/>
                    <Button Content="Remove Part" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Button Content="Confirm" Width="100" Height="40"/>
    </StackPanel>
</Window>
