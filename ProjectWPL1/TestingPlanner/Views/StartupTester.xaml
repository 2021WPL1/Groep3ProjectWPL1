<Window x:Class="TestingPlanner.Views.StartupTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingPlanner.Views"
        mc:Ignorable="d"
        Title="StartupTester" Height="450" Width="800">
    <StackPanel>
        <Image Style="{StaticResource BarcoLogo}"/>
        <StackPanel Margin="10">
            <GroupBox Header="Startscreen Testers" BorderThickness="0.1" Height="300">
                <TabControl>
                    <TabItem Header="Planned tests">
                    </TabItem>
                    <TabItem Header="Planning queue">
                        <!--Tests to plan where this user is the PVG-->
                    </TabItem>
                    <TabItem Header="Resource calendar">
                        
                    </TabItem>
                </TabControl>
            </GroupBox>
        </StackPanel>
    </StackPanel>
</Window>
