<UserControl x:Class="TestingPlanner.Views.TempUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestingPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800" d:Background="#363636">
    <StackPanel Margin="10">
        <GroupBox Header="Planned JobRequests" BorderThickness="0.1">
            <ListBox Height="250" ItemsSource="{Binding idRequestsOnly}" SelectedItem="{Binding SelectedJR, Mode=TwoWay}" Background="White" Foreground="Black" Margin="10"/>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="New JR" 
                        Command="{Binding DataContext.DisplayNewJRCommand, 
                            RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, 
                            Mode=OneWay}" 
                        Margin="10"/>
            <Button Content="Open JR details" 
                        Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="DEV: Open employee startup" 
                        Margin="10"/>
            <Button Content="DEV: Open planner startup" 
                        Margin="10"/>
            <Button Content="DEV: Open tester startup" 
                        Margin="10"/>
        </StackPanel>
    </StackPanel>
</UserControl>
